---
import Layout from '@/layouts/Layout.astro';
import FlashcardList from '@/components/FlashcardList';
---

<Layout title="Manage Flashcards">
  <main class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">My Flashcards</h1>
      <a href="/manual" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
        Create New
      </a>
    </div>
    <FlashcardList client:load />
  </main>
</Layout> 